<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#5500ff00">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/but"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重置/开始"/>

        <SeekBar
            android:id="@+id/sb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/but"/>

        <com.tu.tcircleprogresslibrary.TCircleProgressView
            android:id="@+id/tcpv_demo_1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/but"
            android:layout_marginTop="5dp"
            app:tcpv_animation_duration="1"
            app:tcpv_arc_background_color="@color/colorAccent"
            app:tcpv_arc_end_color="#00ff00"
            app:tcpv_arc_start_color="#fff"
            app:tcpv_background_color="@color/colorPrimary"
            app:tcpv_blank_angle="45"
            app:tcpv_border_width="10dp"
            app:tcpv_hint_background_color="#55ff0000"
            app:tcpv_hint_semicircle_rate="0.5"
            app:tcpv_hint_show="true"
            app:tcpv_hint_text="1xml配置"
            app:tcpv_hint_text_color="#ffffff"
            app:tcpv_hint_text_size="10dp"
            app:tcpv_start_angle="90"
            app:tcpv_total_progress="100"/>

        <com.tu.tcircleprogresslibrary.TCircleProgressView
            android:id="@+id/tcpv_demo_2"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_below="@+id/tcpv_demo_1"
            app:tcpv_arc_start_color="#ff0000"
            app:tcpv_blank_angle="80"
            app:tcpv_hint_show="true"
            app:tcpv_hint_text="2比较宽"
            app:tcpv_start_angle="180"/>

        <com.tu.tcircleprogresslibrary.TCircleProgressView
            android:id="@+id/tcpv_demo_3"
            android:layout_width="150dp"
            android:layout_height="300dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tcpv_demo_1"
            app:tcpv_background_color="#ff0000"
            app:tcpv_blank_angle="180"
            app:tcpv_hint_show="true"
            app:tcpv_hint_text="3比较高"
            app:tcpv_start_angle="0"/>

        <com.tu.tcircleprogresslibrary.TCircleProgressView
            android:id="@+id/tcpv_demo_4"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/tcpv_demo_2"
            app:tcpv_blank_angle="80"
            app:tcpv_hint_show="true"
            app:tcpv_hint_text="4相同宽高"
            app:tcpv_hint_text_color="#00ff00"
            app:tcpv_start_angle="270"/>

        <com.tu.tcircleprogresslibrary.TCircleProgressView
            android:id="@+id/tcpv_demo_5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/tcpv_demo_4"
            app:tcpv_blank_angle="60"
            app:tcpv_border_width="1dp"
            app:tcpv_background_color="#00000000"
            app:tcpv_hint_show="false"
            app:tcpv_start_angle="90"/>

        <com.tu.tcircleprogresslibrary.TCircleProgressView
            android:id="@+id/tcpv_demo_6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/tcpv_demo_4"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/tcpv_demo_5"
            android:layout_toRightOf="@+id/tcpv_demo_5"
            app:tcpv_blank_angle="60"
            app:tcpv_border_width="1dp"
            app:tcpv_hint_background_color="#cccccc"
            app:tcpv_hint_show="true"
            app:tcpv_hint_text="6红颜色"
            app:tcpv_hint_text_color="#ff0000"
            app:tcpv_start_angle="90"/>


        <com.tu.tcircleprogresslibrary.TCircleProgressView
            android:id="@+id/tcpv_demo_7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/tcpv_demo_4"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/tcpv_demo_6"
            android:layout_toRightOf="@+id/tcpv_demo_6"/>


    </RelativeLayout>
</ScrollView>